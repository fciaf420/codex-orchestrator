{
  "description": "Auto-update codex-agent CLI when plugin source changes",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-update.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
